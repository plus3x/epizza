= form_for @order do |f|
  = f.error_messages
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :phone
    = f.text_field :phone
  #pizzas
    = f.fields_for :pizzas do |fp|
      .pizza{id:"pizza_#{fp.object.num}"}
        %h4= "Pizza ##{fp.object.num}"
        .field
          = fp.label :type
          = fp.text_field :type
        = fp.hidden_field :num, fp.object.num
  = link_to 'Add pizza', '', onclick: 'add_nested("pizza")', remote: true
  |
  = link_to 'Remove last pizza', '', onclick: 'remove_nested("pizza")', remote: true
  .actions
    = f.submit 'Save'